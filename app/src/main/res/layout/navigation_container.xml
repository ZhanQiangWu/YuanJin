<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_root"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/blue_crm3"
    >

    <LinearLayout
        android:id="@+id/navigation_layout_left"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <net.yuanjin.widget.navigation.NavigationBackButton
            android:id="@+id/navigation_btn_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:orientation="horizontal"
            >

        </net.yuanjin.widget.navigation.NavigationBackButton>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/navigation_layout_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="85dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_layout_right"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:orientation="horizontal">

        <net.yuanjin.widget.navigation.NavigationButton
            android:id="@+id/navigation_btn_right2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" />

        <net.yuanjin.widget.navigation.NavigationButton
            android:id="@+id/navigation_btn_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_layout_customright"
        android:layout_width="80dip"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>